<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">
    <ImageButton
        android:id="@+id/removeItem"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/removemark"
        android:layout_centerInParent="true"
        android:visibility="visible"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/color"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/textViewPlanName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:ems="4"
            android:singleLine="true"
            android:text="出國旅遊"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/centerLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintStart_toEndOf="@id/textViewPlanName"
            app:layout_constraintEnd_toStartOf="@id/editItem"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/textViewCityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:ems="4"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:text="台北"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="@id/textViewDate"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:ems="4"
                android:singleLine="true"
                android:text="12/12 - 12/20"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewCityName"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageButton
            android:id="@+id/editItem"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/editmark"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            app:layout_constraintStart_toEndOf="@id/centerLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/moveItem"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/movemark"
        android:layout_centerInParent="true"
        android:visibility="visible"/>
</LinearLayout>